{% extends 'base.html.twig' %} {% block title %}Changer de mot de
passe{% endblock %} {% block content %}{% endblock %} {% block stylesheets %}
<link
  href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
  rel="stylesheet"
/>
{{ encore_entry_link_tags("register") }}

{% endblock %} {% block body %}

<div class="container" style="margin-top: 150px">
  <div class="row envelope">
    <div class="col-lg-2 col-sm-12 col-md-12"></div>
    <div class="col-lg-8 col-sm-12 col-md-12">
      <div class="wrapper">
        <h1 class="text-center">Choisir un nouveau mot de passe</h1>

        <div class="p-3" data-turbo="false">
          {{ form_start(passForm) }}

          <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 pass">
              {{ form_row(passForm.password) }}
               <span class="eye-span-login">
                  <i class="toggle-password fa fa-eye" aria-hidden="true"></i
                ></span>
            </div>
            
          </div>

          <button class="btn button" type="submit">
            Envoyer
          </button>
          {{ form_end(passForm) }}
        </div>
      </div>
    </div>
    <div class="col-lg-2 col-sm-12 col-md-12"></div>
  </div>
</div>
{% endblock %} {% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags("register") }}

{% endblock %}
