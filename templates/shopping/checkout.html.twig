{% extends 'base.html.twig' %}
{% block title %}Checkout
{% endblock %}
{% block content %}
	Checkout
{% endblock content %}
{% block
stylesheets %}
	{{ encore_entry_link_tags("shopping") }}
	{{ encore_entry_link_tags("checkout") }}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-...VotreCléDeSécurité..." crossorigin="anonymous"/>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"/>

{% endblock %}
{% block body %}
	<div class="mx-auto w-25 text-white">
		<h3 style="margin:18px 0 70px 0 ;" class="mx-auto ">Panier d'Achat</h3>
	</div>

	<div class="shopping-cart mx-auto" id="js-data" data-url="{{url}}" data-produits="{{ produits }}">

		<div style="background-color:white" id="checkout-products" class="product w-100"></div>


		<div id="checkout-total"></div>


		<button class="checkout">
			<a href="{{ path('app_shop_payment') }}">Valider</a>
		</button>
		<button class="retour">
			<a href="{{ path('app_shop') }}">Retourne</a>
		</button>
	</div>

{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags("shopping") }}

	{{ encore_entry_script_tags("checkout") }}


{% endblock %}
